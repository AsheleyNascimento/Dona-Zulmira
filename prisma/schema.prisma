generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model medico {
  id_medico       Int       @id @default(autoincrement())
  nome_completo   String    @db.VarChar(100)
  crm             String    @unique(map: "crm") @db.VarChar(15)
  situacao        Boolean
  data_criacao    DateTime? @default(now()) @db.DateTime(0)
  usuario_criacao String?   @db.VarChar(50)
}

model usuario {
  id_usuario      Int       @id @default(autoincrement())
  nome_usuario    String    @db.VarChar(50)
  nome_completo   String    @db.VarChar(100)
  cpf             String    @unique(map: "cpf") @db.VarChar(11)
  senha_hash      String    @db.VarChar(255)
  email           String    @unique(map: "email") @db.VarChar(150)
  funcao          String    @db.VarChar(50)
  situacao        Boolean
  data_criacao    DateTime? @default(now()) @db.DateTime(0)
  usuario_criacao String?   @db.VarChar(50)
}
